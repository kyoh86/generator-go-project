project_name: <%- projectName %>
release:
  github:
    owner: <%- author %>
    name: <%- projectName %>
brew:
  install: |
    bin.install "<%- projectName %>"
    man1.install "<%- projectName %>.1"
  github:
    owner: <%- author %>
    name: homebrew-tap
  folder: Formula
  homepage: https://github.com/<%- author %>/<%- projectName %>
  description: <%- description %>
builds:
- goos:
  - linux
  - darwin
  - windows
  goarch:
  - amd64
  - "386"
  main: .
  ldflags: -s -w -X main.version={{.Version}} -X main.commit={{.Commit}} -X main.date={{.Date}}
  binary: <%- projectName %>
  hooks:
    pre: make man
archive:
  format: tar.gz
  name_template: "{{ .Binary }}_{{ .Version }}_{{ .Os }}_{{ .Arch }}{{ if .Arm }}v{{ .Arm }}{{ end }}"
  files:
  - licence*
  - LICENCE*
  - license*
  - LICENSE*
  - readme*
  - README*
  - changelog*
  - CHANGELOG*
  - <%- projectName %>.1
snapshot:
  name_template: SNAPSHOT-{{ .Commit }}
