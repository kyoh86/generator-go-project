project_name: <%- project_name %>
release:
  github:
    owner: <%- author %>
    name: <%- project_name %>
brews:
- install: |
    bin.install "<%- project_name %>"
    man1.install "<%- project_name %>.1"
  github:
    owner: <%- author %>
    name: homebrew-tap
  folder: Formula
  homepage: https://github.com/<%- author %>/<%- project_name %>
  description: <%- description %>
builds:
- goos:
  - linux
  - darwin
  - windows
  goarch:
  - amd64
  - "386"
  main: .
  ldflags: -s -w -X main.version={{.Version}} -X main.commit={{.Commit}} -X main.date={{.Date}}
  binary: <%- project_name %>
  hooks:
    pre: make man
archives:
- id: gzip
  format: tar.gz
  format_overrides:
    - goos: windows
      format: zip
  name_template: "{{ .Binary }}_{{ .Version }}_{{ .Os }}_{{ .Arch }}{{ if .Arm }}v{{ .Arm }}{{ end }}"
  files:
  - licence*
  - LICENCE*
  - license*
  - LICENSE*
  - readme*
  - README*
  - changelog*
  - CHANGELOG*
  - <%- project_name %>.1
snapshot:
  name_template: SNAPSHOT-{{ .Commit }}
